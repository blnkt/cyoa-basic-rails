<h3><%= @adventure.username %></h3>

<p><%= @chapter.prompt %></p>
<br>
<p><%= @chapter.episode %></p>
<ul>
  <% @chapter.choices.each do |choice|%>
    <li><a href="/adventures/<%= @adventure.id %>/chapters/<%= choice.id %>"><%= choice.prompt %></a></li>
  <% end %>
</ul>

<p><a href="/chapters/<%= @chapter.id %>"
      data-confirm="You sure?"
      data-method="delete"
      rel="nofollow">Destroy your Adventure</a></p>
<p><a href="/adventures">Return to Adventure listing</a></p>